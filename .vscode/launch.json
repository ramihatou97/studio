        "configurations": [
            // Existing configurations
            {
                "name": "Attach to Chrome",
                "port": 9222,
                "request": "attach",
                "type": "chrome",
                "webRoot": "${workspaceFolder}"
            },
            {
                "type": "chrome",
                "request": "launch",
                "name": "Launch Chrome against localhost",
                "url": "http://localhost:8080",
                "webRoot": "${workspaceFolder}"
            },
            // New configuration for debugging the Next.js server
            {
                "name": "Next.js: Debug Server",
                "type": "node",
                "request": "launch",
                "program": "${workspaceFolder}/node_modules/.bin/next",
                "args": ["dev"],
                "cwd": "${workspaceFolder}",
                "protocol": "inspector",
                "console": "integratedTerminal"
            },
            // New configuration for debugging the Next.js client (browser)
            {
                "name": "Next.js: Debug Client",
                "type": "chrome",
                "request": "launch",
                "url": "http://localhost:3000", // Adjust the port if your Next.js app runs on a different one
                "webRoot": "${workspaceFolder}"
            }
        ]
    }
    










